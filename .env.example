# Application Settings
APP_NAME=Bordereaux API
APP_VERSION=0.1.0
DEBUG=False

# Database Settings
DATABASE_URL=sqlite:///./bordereaux.db

# Server Settings
HOST=0.0.0.0
PORT=8000

# IMAP Settings
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=your-email@example.com
IMAP_PASSWORD=your-password
# IMAP_OAUTH_TOKEN=your-oauth-token  # Use this instead of password for OAuth

# Storage Settings
STORAGE_BASE_PATH=./storage

# Polling Settings
POLLING_INTERVAL=300

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=xlsx,xls,csv

# Logging Settings
LOG_LEVEL=INFO
# LOG_FILE=logs/bordereaux.log  # Optional: path to log file
